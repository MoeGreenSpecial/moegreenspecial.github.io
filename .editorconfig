# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Force LF line endings for content, since Jekyll looks for \n instead of \r\n when looking for excerpts.
[*.html]
end_of_line = lf

[*.md]
end_of_line = lf

